<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ToolFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="44dp">


        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Currency Converter"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:onClick="chooseOne"
            android:id="@+id/first_id"
            android:scaleType="fitXY"
            android:src="@drawable/usd"
            android:layout_height="match_parent"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:inputType="number"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:id="@+id/first"
            android:text="USD"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="#333"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/u636"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="120dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:id="@+id/second_id"
            android:onClick="chooseTwo"

            android:scaleType="fitXY"
            android:src="@drawable/gbp"
            android:layout_height="match_parent"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:inputType="number"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:id="@+id/second"
            android:text="GBP"
            android:textSize="20sp"
            android:textColor="#333"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>