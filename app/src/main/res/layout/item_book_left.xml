<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:background="@drawable/bg_book"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="140dp"
        android:scaleType="fitXY"
        android:id="@+id/book"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:src="@drawable/book2"
        android:layout_height="200dp"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Currency Trading for Dummies"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/book"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:id="@+id/name"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Written by"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="40dp"
        android:maxLines="2"
        android:id="@+id/sub"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Kathleen Brooks"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/sub"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:id="@+id/name1"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Brian Dolan"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/name1"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>