<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="35dp"
        android:src="@drawable/avatar"
        android:id="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:layout_height="35dp"/>


    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintLeft_toRightOf="@id/avatar"
        android:layout_marginLeft="15dp"
        android:text="User999"
        android:textColor="#333"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/text_flag"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        android:text="Performance"
        android:id="@+id/performance"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@id/performance"
        android:text="+66.66 USD"
        android:id="@+id/text_flag"
        android:textColor="#009B39"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        android:layout_marginTop="25dp"
        android:background="#f2f2f2"
        android:id="@+id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="10dp"/>



    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Free Margin"
        android:gravity="center"
        android:id="@+id/text_four"
        android:textColor="#333"
        app:layout_constraintRight_toLeftOf="@id/text_five"
        app:layout_constraintTop_toBottomOf="@id/text_one"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/text_one"
        android:text="Used Margin"
        android:gravity="center"
        android:textColor="#333"
        android:id="@+id/text_five"
        app:layout_constraintTop_toBottomOf="@id/text_one"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@id/text_six"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Balance"
        android:gravity="center"
        android:textColor="#333"
        android:id="@+id/text_six"
        app:layout_constraintLeft_toRightOf="@id/text_five"
        app:layout_constraintTop_toBottomOf="@id/text_one"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>





    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="10000.00"
        android:gravity="center"
        android:textColor="#333"
        android:id="@+id/text_one"
        app:layout_constraintRight_toLeftOf="@id/text_two"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/text_one"
        android:text="10000.00"
        android:textColor="#333"
        android:gravity="center"
        android:id="@+id/text_two"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@id/text_three"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="10000.00"
        android:textColor="#333"
        android:gravity="center"
        android:id="@+id/text_three"
        app:layout_constraintLeft_toRightOf="@id/text_two"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>


    <com.google.android.material.tabs.TabLayout
        android:layout_width="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_six"
        android:layout_marginTop="40dp"
        android:id="@+id/tab"
        app:tabTextColor="#333"
        app:tabIndicatorColor="#333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="44dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="0dp"
        android:id="@+id/view_pagwer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab"
        android:background="@color/white"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>