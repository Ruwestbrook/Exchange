<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BookDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Book Details"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:background="#f2f2f2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:layout_height="10dp"/>



    <ImageView
        android:layout_width="140dp"
        android:scaleType="fitXY"
        android:id="@+id/book"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        android:src="@drawable/book2"
        android:layout_height="200dp"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Currency Trading for Dummies"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/book"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:id="@+id/name"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Written by"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:id="@+id/sub"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Kathleen Brooks"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/sub"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:id="@+id/name1"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:text="Brian Dolan"
        app:layout_constraintLeft_toRightOf="@id/book"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/name1"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="#333"
        android:id="@+id/details1"
        android:layout_marginRight="30dp"
        android:text="Don’t be put off by the Dummies name, or the iconic yellow cover – Dummies books are undeniably some of the best on the subject matter they cover, and their book on forex currency trading is a great option for those considering entering the foreign exchange market."
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#333"
        android:text="The book contains a detailed breakdown of each of the major currencies along with tons of tips and tricks on how to trade fx markets. In addition, there’s information on what factors drive the various economies these currencies power. It’s perfect for beginners or those looking for an in-depth refresher."
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>